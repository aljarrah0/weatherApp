<!DOCTYPE html>
<html>

<head>
  <title>Test</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
</head>

<body>
  <div class="container">
    <fieldset>
      <form class="form-group" action="/" method="post">
        <input class="form-control" name="city" type="text" class="ghost-input" placeholder="Enter a City" required>
        <input class="btn btn-primary" type="submit" class="ghost-button" value="Get Weather">
      </form>
      <% if(weather !== null){ %>
      <h3>
        <%= weather %>
      </h3>
      <% } %>

      <% if(error !== null){ %>
      <p>
        <%= error %>
      </p>
      <% } %>
    </fieldset>
  </div>
</body>

</html>